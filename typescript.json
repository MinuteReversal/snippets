  "comment first line": {
    "prefix": "comment",
    "body": [
      "${BLOCK_COMMENT_START}! *****************************************************************************",
      "fileName    : ${TM_FILENAME} ",
      "author      : 114233763@qq.com",
      "date        : ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} ${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}",
      "version     : v1",
      "description : $1",
      "***************************************************************************** ${BLOCK_COMMENT_END}\n"
    ],
    "description": "typescript comment of first line"
  },
  "scaffold vuex store template": {
    "prefix": "scaffold vuex store",
    "body": [
      "import { ActionContext } from \"vuex\";",
      "import {} from \"@/api/biz\";",
      "import {} from \"@/api/biz/models\";\n",
      "export interface I${1:${TM_FILENAME_BASE/(.*)/${1:/capitalize}/}}State {",
      "  field: number;",
      "}\n",
      "export class $1State implements I$1State {",
      "  field = 0;",
      "}\n",
      "// state",
      "const state = new $1State();\n",
      "// getters",
      "const getters = {",
      "  field: (state: $1State) => state.field",
      "};\n",
      "// actions",
      "const actions = {",
      "  save({ commit }: ActionContext<$1State, any>, payload: any) {",
      "    //do some request",
      "    commit(\"SAVE\", payload);",
      "  }",
      "};\n",
      "// mutations",
      "const mutations = {",
      "  SAVE(state: $1State, payload: any) {",
      "    Object.assign(state, payload);",
      "  }",
      "};\n",
      "export default {",
      "  namespaced: true,",
      "  state,",
      "  getters,",
      "  actions,",
      "  mutations",
      "};"
    ],
    "description": "vuex store template"
  }
}